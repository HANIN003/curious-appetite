{{#each recipes as |recipe| }}
<div class="row mb-4">
  <div class="col-md-5">
    <h2>
      <a href="/recipe/{{recipe.id}}">{{recipe.title}}</a>
    </h2>
    <p>Posted by {{recipe.user.name}} 
    </p>
  </div>
  <div class="col-md-7">
    <p>
      {{recipe.ingredients}}
      {{recipe.method}}
    </p>
  </div>
</div>
{{/each}}