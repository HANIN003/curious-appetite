<div class="dashboard">
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add Your Recipe!</h3>
    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="name-recipe">Recipe Name:</label>
        <input
          class="form-input"
          type="text"
          id="name-recipe"
          placeholder="Enter your recipe"
        />
      </div>

      <div class="form-group">
        <label for="ingredients-recipe">Ingredients:</label>
        <input
          class="form-input"
          type="text"
          id="ingredients-recipe"
          placeholder="Enter your ingredients"
        />
      </div>

      <div class="form-group">
        <label for="instructions-recipe">Instructions:</label>
        <input
          class="form-input"
          type="text"
          id="instructions-recipe"
          placeholder="Enter your instructions"
        />
      </div>

      <div class="form-group">
        <label for="tags-recipe">Tags:</label>
          {{#each tags as |tag|}}
            {{> tag-option-details}}
          {{/each}}
          <input
            class="form-input"
            type="checkbox"
            id="None_of_the_Above"
            name="None_of_the_Above"
            value="None_of_the_Above"
          />
          <label for="None_of_the_Above">None_of_the_Above</label>
      </div>

      <div class="form-group">
        <button class="btn btn-primary" type="submit">Add Recipe</button>
      </div>
    </form>
  </div>

  {{#if recipes.length}}
    <div class="col-md-6 recipe-list">
      <h3>Your Recipes</h3>

      {{#each recipes as |recipe|}}
        {{> recipe-details}}
      {{/each}}
    </div>
  {{/if}}
</div>
</div>
<script src="/js/profile.js"></script>

