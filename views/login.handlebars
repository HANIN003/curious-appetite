    <div class="login-container">
        <div class="login-card">
            <div class="inner-box" id="card">
                <div class="card-front">
                    <h2>LOGIN</h2>
                    
                        <form class="login-form">

                        <input type="email" class="input-box" id="email-login" placeholder="Your Email" required>
                        <input type="password" class="input-box" id="password-login" placeholder="Password" required>
                        <button type="submit" class="submit-btn">Log In</button>

                        </form>
                  
                    <button type="button" class="btn" onclick="openRegister()">I'm new here</button>
                </div>
                <div class="card-back">
                    <h2>REGISTER</h2>
                    <form class="signup-form">
                        <input type="text" class="input-box" id="name-signup" placeholder="Your Name" required>
                        <input type="email" class="input-box" id="email-signup" placeholder="Your Email" required>
                        <input type="password" class="input-box" id="password-signup" placeholder="Password" required>
                        <button type="submit" class="submit-btn">Sign Up</button>
                    </form>
                    <button type="button" class="btn" onclick="openLogin()">I have an account</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        const card = document.getElementById("card");

        function openRegister() {
            card.style.transform = "rotateY(-180deg";
        }
        function openLogin() {
            card.style.transform = "rotateY(0deg";
        }
    </script>

<script src="/js/login.js"></script>


